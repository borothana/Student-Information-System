@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "Delete Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <h3>Delete Student</h3>
                <div class="row">
                    @using (Html.BeginForm())
                    {
                        @Html.HiddenFor(m => m.Student.StudentId)
                        <div class="col-xs-12 col-sm-7">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Personal Details</h4>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label>First Name:</label>
                                        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name:</label>
                                        @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Major:</label>
                                        @Html.DropDownListFor(m => m.Student.Major.MajorId, Model.MajorItems, "-Choose One-", new { @class = "form-control" })

                                    </div>
                                    <div class="form-group">
                                        <label>GPA:</label>
                                        @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Courses</label>
                                        @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="panel-heading">
                                    <h4 class="panel-title">Address Details</h4>
                                </div>                                
                                <div class="panel-body">
                                    <div class="form-group">
                                            <label>Street 1:</label>
                                            @Html.ValidationMessageFor(m => m.Student.Address.Street1)
                                            @Html.TextBoxFor(m => m.Student.Address.Street1, new { @class = "form-control" })
                                        </div>
                                    <div class="form-group">
                                            <label>Street 2:</label>
                                            @Html.TextBoxFor(m => m.Student.Address.Street2, new { @class = "form-control" })
                                        </div>
                                    <div class="form-group">
                                            <label>City:</label>
                                            @Html.ValidationMessageFor(m => m.Student.Address.City)
                                            @Html.TextBoxFor(m => m.Student.Address.City, new { @class = "form-control" })
                                        </div>
                                    <div class="form-group">
                                            <label>State:</label>
                                            @Html.ValidationMessageFor(m => m.Student.Address.State.StateAbbreviation)
                                            @Html.DropDownListFor(m => m.Student.Address.State.StateAbbreviation, Model.StateItems, "-Choose One-", new { @class = "form-control" })
                                        </div>
                                    <div class="form-group">
                                            <label>Postal Code:</label>
                                            @Html.ValidationMessageFor(m => m.Student.Address.PostalCode)
                                            @Html.TextBoxFor(m => m.Student.Address.PostalCode, new { @class = "form-control" })
                                        </div>
                                   
                                    <hr />
                                    <label>Are you sure you want to delete the student?</label>
                                    <div style="text-align:right">
                                        @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn btn-info" })
                                        <button class="btn btn btn-danger">Delete</button>
                                    </div>
                               </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
