@model Exercises.Models.ViewModels.StudentVM

@{
    ViewBag.Title = "Add";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <h3>Add Student</h3>
                <div class="row">
                    @using (Html.BeginForm("Add", "Student", HttpVerbs.Post))
                    {
                        <div class="col-xs-12 col-sm-7">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <h4 class="panel-title">Personal Details</h4>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label>First Name:</label>
                                        @Html.ValidationMessageFor(m => m.Student.FirstName)
                                        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name:</label>
                                        @Html.ValidationMessageFor(m => m.Student.LastName)
                                        @Html.TextBoxFor(m => m.Student.LastName, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>Major:</label>
                                        @Html.ValidationMessageFor(m => m.Student.Major.MajorId)
                                        @Html.DropDownListFor(m => m.Student.Major.MajorId,  Model.MajorItems, "-Choose One-", new { @class = "form-control" })
                                        @*@Html.DropDownListFor(m=>m.Student.Major, Model.MajorItems.Select(p => new SelectListItem { Value = p.Value, Text = p.Text }))*@
                                        </div>
                                        <div class="form-group">
                                            <label>GPA:</label>
                                            @Html.ValidationMessageFor(m => m.Student.GPA)
                                            @Html.TextBoxFor(m => m.Student.GPA, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label>Courses</label>
                                            @Html.ListBoxFor(m => m.SelectedCourseIds, Model.CourseItems, new { @class = "form-control" })
                                        </div>
                                        <hr />
                                        <div  class="form-group" style="text-align:right">
                                            @Html.ActionLink("Cancel", "List", "Student", null, new { @class = "btn btn btn-info" })
                                            <button class="btn btn-primary">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
