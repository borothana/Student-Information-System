@model Exercises.Models.Data.Course

@{
    ViewBag.Title = "EditCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-xs-12">
        <h3>Edit Course</h3>
        @Html.ActionLink("Return to List", "Courses", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.CourseId)
            <div class="form-group">
                <label>Coures</label>
                @Html.ValidationMessageFor(m => m.CourseName)
                @Html.TextBoxFor(m => m.CourseName, new { @class = "form-control", placeholder = "Course" })
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>      

